{
  "name": "@ankhdt/loom-engine",
  "version": "0.2.0",
  "description": "TypeScript library for managing interactions with language models based on the loom of time concept",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./browser": {
      "types": "./src/browser.ts",
      "default": "./src/browser.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "node --test 'src/**/*.test.ts'",
    "test:specific": "node --test",
    "build": "rm -rf dist && node esbuild.config.js"
  },
  "keywords": [
    "llm",
    "language-model",
    "conversation",
    "branching"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@google/genai": "^0.8.0",
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "openai": "^4.33.1",
    "zod": "^3.25.61",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "^22.14.0",
    "esbuild": "^0.25.2",
    "typescript": "^5.8.3"
  }
}
