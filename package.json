{
  "name": "loom-workspace",
  "version": "1.0.0",
  "description": "Monorepo for loom libraries",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "cd packages/cli && npx tsx src/cli.ts",
    "start:gui": "cd packages/gui && pnpm dev",
    "dev": "pnpm -r dev",
    "lint": "eslint .",
    "format": "prettier --write \"packages/**/*.ts\"",
    "test": "pnpm -r test",
    "prepare": "husky",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}